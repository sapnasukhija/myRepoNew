@model CakesListViewModel
@if (Model.Cakes?.Count() > 0)
{
    <h1>@Model.CurrentCategory</h1>
    @if (Model.CurrentCategory == "Price Range")
    {
        @await Html.PartialAsync("CakesByPrice", @Model);

    }
    else if (Model.CurrentCategory != "Price Range")
    {

        <div class="row">
            @foreach (var cake in Model.Cakes)
            {
                @await Html.PartialAsync("CakeView", cake);
            }
        </div>
    }

    }
    else
    {
    <h1>Cakes</h1>
    <p>Sorry! Not cakes are found in '@Model.CurrentCategory' category. </p>
}
